<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="radio@hslbck.gmail.com">
    <schema path="/org/gnome/shell/extensions/radio/" id="org.gnome.shell.extensions.radio">
        <key name="use-media-keys" type="b">
            <default>false</default>
            <summary>Use Media Keys</summary>
            <description>Enable/disable play and stop keys</description>
        </key>
        <key name="title-notification" type="b">
            <default>false</default>
            <summary>Title Notification</summary>
            <description>Show title notifications</description>
        </key>
        <key name="play-after-lock" type="b">
            <default>false</default>
            <summary>Play after lock</summary>
            <description>Play music after screen lock</description>
        </key>
        <key name="resume-after-unlock" type="b">
            <default>false</default>
            <summary>Resume after unlock</summary>
            <description>Resume radio after screen unlock</description>
        </key>
        <key name="resume-after-network-reconnect" type="b">
            <default>true</default>
            <summary>Resume after network reconnect</summary>
            <description>Resume radio after network problems</description>
        </key>
        <key name="show-title-in-panel" type="b">
            <default>false</default>
            <summary>Show title in panel</summary>
            <description>Show the title notification in the top panel</description>
        </key>
        <key name="show-volume-adjustment-slider" type="b">
            <default>false</default>
            <summary>Show volume adjustment slider</summary>
            <description>Show the volume adjustment slider in menu</description>
        </key>
        <key name="volume-level" type="d">
            <default>1</default>
            <summary>Volume level</summary>
            <description>Output volume level</description>
        </key>
        <key name="enable-search-provider" type="b">
            <default>false</default>
            <summary>Enable as search provider for GNOME Shell</summary>
            <description>Show radio stations as search results in GNOME overview</description>
        </key>
         <key name="station-action" type="s">
            <default>""</default>
            <summary>Manage stations</summary>
            <description>Enable, disable, add, edit and delete stations from the preferences window</description>
        </key>
    </schema>
</schemalist>
